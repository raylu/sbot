#!/usr/bin/env python3

import locale

from bot import Bot
import code_eval
import eve
import management
import poe
import reddit
import timer
import utils
import friend_code
import animal_crossing

def main():
	locale.setlocale(locale.LC_ALL, 'en_US.UTF-8')

	bot = Bot({
		'help': utils.help,
		'ping': utils.ping,
		'calc': utils.calc,
		'unicode': utils.unicode,
		'units': utils.units,
		'roll': utils.roll,
		'time': utils.timezones,
		'weather': utils.weather,
		'ohno': utils.ohno,
		'ohyes': utils.ohyes,

		'timer': timer.timer,

		'price': eve.price_check,
		'jumps': eve.jumps,
		'ly': eve.lightyears,
		'evewho': eve.who,

		'js': code_eval.nodejs,
		'ruby': code_eval.ruby,
		'py2': code_eval.python2,
		'py3': code_eval.python3,

		'join': management.join,
		'leave': management.leave,
		'roles': management.list_roles,
		'groups': management.list_roles,

		'headpat': reddit.headpat,

		'pc': poe.price,
		'poe': poe.wiki,

		'fc': friend_code.friend_code,
		'stalks': animal_crossing.stalk_market,
	})
	bot.connect()
	bot.run_forever()

if __name__ == '__main__':
	main()
