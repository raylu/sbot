#!/usr/bin/env python3

import locale

from bot import Bot
import code_eval
import eve
import management
import reddit
import utils

def main():
	locale.setlocale(locale.LC_ALL, 'en_US.UTF-8')

	bot = Bot({
		'help': utils.help,
		'calc': utils.calc,
		'unicode': utils.unicode,
		'units': utils.units,
		'roll': utils.roll,
		'time': utils.timezones,
		'timer': utils.timer,
		'weather': utils.weather,
		'ohno': utils.ohno,
		'blyat': utils.blyat,

		'pc': eve.price_check,
		'price': eve.price_check,
		'jumps': eve.jumps,
		'ly': eve.lightyears,
		'who': eve.who,

		'js': code_eval.nodejs,
		'ruby': code_eval.ruby,
		'py2': code_eval.python2,
		'py3': code_eval.python3,

		'join': management.join,
		'leave': management.leave,
		'roles': management.list_roles,
		'groups': management.list_roles,

		'headpat': reddit.headpat,
	})
	bot.connect()
	bot.run_forever()

if __name__ == '__main__':
	main()
